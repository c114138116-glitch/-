    <script>
        // å®šç¾©æ­£ç¢ºç­”æ¡ˆ (Q1 å·²æ›´æ–°ç‚ºã€Œè”æã€)
        const correctAnswers = {
            q1: "è”æ", 
            q2: "æ°´" 
        };

        /**
         * æª¢æŸ¥å–®ä¸€è¬é¡Œçš„ç­”æ¡ˆ
         * @param {string} questionId - è¬é¡Œçš„ IDï¼Œä¾‹å¦‚ 'q1' æˆ– 'q2'
         */
        function checkAnswer(questionId) {
            // 1. å–å¾—ä½¿ç”¨è€…è¼¸å…¥çš„å€¼ä¸¦é€²è¡Œæ¸…ç† (å»é™¤ç©ºæ ¼ã€è½‰æ›æˆå°å¯«)
            const inputElement = document.getElementById(`${questionId}-input`);
            // ç‰¹æ®Šè™•ç†ä¸­æ–‡å…¨å½¢å’ŒåŠå½¢ç©ºæ ¼å•é¡Œ
            const userAnswer = inputElement.value.trim().replace(/ã€€/g, '').toLowerCase();

            // 2. å–å¾—æ­£ç¢ºç­”æ¡ˆ
            const correctAnswer = correctAnswers[questionId].toLowerCase();
            
            // 3. å–å¾—çµæœé¡¯ç¤ºçš„å…ƒç´ 
            const resultDiv = document.getElementById(`${questionId}-result`);

            let message = "";
            let emoji = "";
            let className = "";

            // 4. åˆ¤æ–·ç­”æ¡ˆæ˜¯å¦æ­£ç¢º
            if (userAnswer === correctAnswer) {
                // ç­”å°äº†ï¼šç¬‘è‡‰ + ä½ è¶…æ£’
                emoji = "ğŸ˜";
                message = "ä½ è¶…æ£’";
                className = "correct";
            } else {
                // ç­”éŒ¯äº†ï¼šç”Ÿæ°£è‡‰ + ä½ å¥½ç¬¨
                emoji = "ğŸ˜¡";
                message = "ä½ å¥½ç¬¨";
                className = "incorrect";
            }
            
            // 5. æ›´æ–°çµæœé¡¯ç¤ºå€åŸŸçš„å…§å®¹å’Œæ¨£å¼
            resultDiv.className = `result ${className}`;
            resultDiv.innerHTML = `<span class="emoji-big">${emoji}</span> ${message}`;
        }
    </script>

